{
  "root": true,
  "env": {
    "browser": true,
    "node": true,
    "webextensions": true
  },
  "extends": [
    "eslint:recommended",
    "airbnb-base"
  ],
  "globals": {
    "Atomics": "readonly",
    "SharedArrayBuffer": "readonly"
  },
  "parserOptions": {
    "ecmaVersion": "latest"
  },
  "rules": {
    "max-len": ["error", {
      "code": 100
    }],
    "no-console": "off"
  }
}
