{
  "name": "Amazon URL Shortener",
  "version": "0.0.0",
  "description": "URL shortener for Amazon.",
  "background": {
    "scripts": [
      "./src/background.js"
    ],
    "persistent": false
  },
  "page_action": {
    "default_popup": "./src/popup/popup.html"
  },
  "permissions": [
    "activeTab",
    "declarativeContent"
  ],
  "manifest_version": 2
}
