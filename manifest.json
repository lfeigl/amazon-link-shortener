{
  "manifest_version": 2,
  "name": "Amazon Link Shortener",
  "version": "0.0.0",
  "description": "Link shortener for Amazon.",
  "permissions": [
    "activeTab",
    "declarativeContent"
  ],
  "background": {
    "scripts": ["./background.js"],
    "persistent": false
  },
  "page_action": {
    "default_popup": "./popup/popup.html",
    "default_icon": {
      "16": "./icons/logo_16.png",
      "32": "./icons/logo_32.png",
      "48": "./icons/logo_48.png",
      "128": "./icons/logo_128.png"
    }
  },
  "icons": {
    "16": "./icons/logo_16.png",
    "32": "./icons/logo_32.png",
    "48": "./icons/logo_48.png",
    "128": "./icons/logo_128.png"
  }
}
